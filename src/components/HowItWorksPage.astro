---
import { getLocalePath, getRegisterUrl, type Locale } from '../i18n/utils';
import { commonTranslations } from '../i18n/common';

interface Props {
  locale: Locale;
  t: {
    badge: string;
    hero: { titleStart: string; titleHighlight: string; description: string };
    howItWorks: { title: string; subtitle: string };
    steps: {
      step1: { label: string; title: string; description: string; formats?: string[]; integrations?: string[] };
      step2: { label: string; title: string; description: string };
      step3: { label: string; title: string; description: string };
    };
    technicalSection: {
      title: string;
      euHosted: { title: string; description: string };
      gdprCompliant: { title: string; description: string };
    };
    stickyCta: { subtitle: string; button: string; note: string };
    // Legacy fields
    process?: { title: string };
    summary?: { title: string; description: string };
    cta?: { title: string; register: string; pricing: string; help: string };
    processVisual?: { upload: string; aiProcessing: string; transcript: string };
  };
}

const { locale, t } = Astro.props;
const common = commonTranslations[locale];
const registerUrl = getRegisterUrl(locale);
---

<div class="bg-base-100 text-base-content">
  <!-- Hero Section -->
  <section class="relative min-h-[70vh] flex items-center justify-center overflow-hidden" style="background: linear-gradient(135deg, #ef56a4 0%, #8b5cf6 50%, #4a90e2 100%);">
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute w-96 h-96 bg-white/10 rounded-full blur-3xl -top-48 -left-48 animate-pulse"></div>
      <div class="absolute w-96 h-96 bg-white/10 rounded-full blur-3xl -bottom-48 -right-48 animate-pulse" style="animation-delay: 1s;"></div>
    </div>

    <div class="relative z-10 container mx-auto px-4 text-center">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full mb-8">
        <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
        <span class="text-white text-sm font-medium">{t.badge}</span>
      </div>

      <!-- Title -->
      <h1 class="font-display text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 tracking-tight">
        {t.hero.titleStart}
        <span class="block mt-2 bg-gradient-to-r from-yellow-300 to-orange-300 bg-clip-text text-transparent">
          {t.hero.titleHighlight}
        </span>
      </h1>

      <!-- Description -->
      <p class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto mb-12 leading-relaxed">
        {t.hero.description}
      </p>

      <!-- Scroll indicator -->
      <button id="scroll-to-steps" class="animate-bounce mt-8 text-white/80 hover:text-white transition-colors cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </button>
    </div>
  </section>

  <!-- How It Works Section -->
  <section id="steps-section" class="py-24 bg-base-100">
    <div class="container mx-auto px-4">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-4">{t.howItWorks.title}</h2>
        <p class="text-lg text-base-content/70 max-w-2xl mx-auto">{t.howItWorks.subtitle}</p>
      </div>

      <!-- Timeline Steps -->
      <div class="max-w-5xl mx-auto">
        <div class="relative">
          <!-- Vertical Line (Desktop) -->
          <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-pink-500 via-purple-500 to-blue-500 rounded-full"></div>

          <!-- Step 1 -->
          <div class="relative flex flex-col md:flex-row items-center mb-16 md:mb-24">
            <!-- Number Circle -->
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-pink-500 rounded-full flex items-center justify-center text-white font-bold text-2xl shadow-lg shadow-pink-500/30 z-10 hidden md:flex">
              1
            </div>

            <!-- Content Card (Left on desktop) -->
            <div class="md:w-1/2 md:pr-16 md:text-right">
              <div class="card bg-base-200 shadow-xl border border-base-300 hover:shadow-2xl transition-all duration-300">
                <div class="card-body">
                  <span class="badge badge-pink-500 bg-pink-500/10 text-pink-500 border-pink-500/20 mb-2 md:ml-auto">{t.steps.step1.label}</span>
                  <h3 class="card-title font-display text-2xl font-bold md:justify-end">{t.steps.step1.title}</h3>
                  <p class="text-base-content/70">{t.steps.step1.description}</p>

                  {t.steps.step1.formats && (
                    <div class="flex flex-wrap gap-2 mt-4 md:justify-end">
                      {t.steps.step1.formats.map((format: string) => (
                        <span class="badge badge-outline badge-sm">{format}</span>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </div>

            <!-- Icon (Right on desktop) -->
            <div class="md:w-1/2 md:pl-16 mt-6 md:mt-0">
              <div class="bg-gradient-to-br from-pink-500/20 to-pink-500/5 p-8 rounded-2xl inline-block">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-pink-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                </svg>
              </div>
            </div>

            <!-- Mobile Number -->
            <div class="md:hidden absolute -top-4 left-4 w-10 h-10 bg-pink-500 rounded-full flex items-center justify-center text-white font-bold shadow-lg">1</div>
          </div>

          <!-- Step 2 -->
          <div class="relative flex flex-col md:flex-row-reverse items-center mb-16 md:mb-24">
            <!-- Number Circle -->
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-purple-500 rounded-full flex items-center justify-center text-white font-bold text-2xl shadow-lg shadow-purple-500/30 z-10 hidden md:flex">
              2
            </div>

            <!-- Content Card (Right on desktop) -->
            <div class="md:w-1/2 md:pl-16 md:text-left">
              <div class="card bg-base-200 shadow-xl border border-base-300 hover:shadow-2xl transition-all duration-300">
                <div class="card-body">
                  <span class="badge bg-purple-500/10 text-purple-500 border-purple-500/20 mb-2">{t.steps.step2.label}</span>
                  <h3 class="card-title font-display text-2xl font-bold">{t.steps.step2.title}</h3>
                  <p class="text-base-content/70">{t.steps.step2.description}</p>

                  <!-- Processing animation -->
                  <div class="flex items-center gap-2 mt-4">
                    <div class="w-2 h-2 bg-purple-500 rounded-full animate-pulse"></div>
                    <div class="w-2 h-2 bg-purple-500 rounded-full animate-pulse" style="animation-delay: 0.2s;"></div>
                    <div class="w-2 h-2 bg-purple-500 rounded-full animate-pulse" style="animation-delay: 0.4s;"></div>
                    <span class="text-sm text-purple-500 font-medium ml-2">99% Accuracy</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Icon (Left on desktop) -->
            <div class="md:w-1/2 md:pr-16 md:text-right mt-6 md:mt-0">
              <div class="bg-gradient-to-br from-purple-500/20 to-purple-500/5 p-8 rounded-2xl inline-block">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              </div>
            </div>

            <!-- Mobile Number -->
            <div class="md:hidden absolute -top-4 left-4 w-10 h-10 bg-purple-500 rounded-full flex items-center justify-center text-white font-bold shadow-lg">2</div>
          </div>

          <!-- Step 3 -->
          <div class="relative flex flex-col md:flex-row items-center">
            <!-- Number Circle -->
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-2xl shadow-lg shadow-blue-500/30 z-10 hidden md:flex">
              3
            </div>

            <!-- Content Card (Left on desktop) -->
            <div class="md:w-1/2 md:pr-16 md:text-right">
              <div class="card bg-base-200 shadow-xl border border-base-300 hover:shadow-2xl transition-all duration-300">
                <div class="card-body">
                  <span class="badge bg-blue-500/10 text-blue-500 border-blue-500/20 mb-2 md:ml-auto">{t.steps.step3.label}</span>
                  <h3 class="card-title font-display text-2xl font-bold md:justify-end">{t.steps.step3.title}</h3>
                  <p class="text-base-content/70">{t.steps.step3.description}</p>

                  <!-- Export formats -->
                  <div class="flex flex-wrap gap-2 mt-4 md:justify-end">
                    <span class="badge badge-outline badge-sm">PDF</span>
                    <span class="badge badge-outline badge-sm">DOCX</span>
                    <span class="badge badge-outline badge-sm">SRT</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Icon (Right on desktop) -->
            <div class="md:w-1/2 md:pl-16 mt-6 md:mt-0">
              <div class="bg-gradient-to-br from-blue-500/20 to-blue-500/5 p-8 rounded-2xl inline-block">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
            </div>

            <!-- Mobile Number -->
            <div class="md:hidden absolute -top-4 left-4 w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold shadow-lg">3</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Technical Deep Dive Section -->
  <section class="py-24 bg-base-200">
    <div class="container mx-auto px-4">
      <h2 class="font-display text-4xl md:text-5xl font-bold text-center mb-16">{t.technicalSection.title}</h2>

      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- EU Hosted -->
        <div class="card bg-base-100 shadow-xl border border-base-300 hover:border-pink-500/30 transition-all duration-300">
          <div class="card-body">
            <div class="flex items-center gap-4 mb-4">
              <div class="bg-blue-500/10 p-4 rounded-xl">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="font-display text-2xl font-bold">{t.technicalSection.euHosted.title}</h3>
            </div>
            <p class="text-base-content/70 leading-relaxed">{t.technicalSection.euHosted.description}</p>

            <!-- Server locations -->
            <div class="flex gap-4 mt-6">
              <div class="flex items-center gap-2">
                <span class="w-3 h-3 bg-green-500 rounded-full"></span>
                <span class="text-sm font-medium">Frankfurt</span>
              </div>
              <div class="flex items-center gap-2">
                <span class="w-3 h-3 bg-green-500 rounded-full"></span>
                <span class="text-sm font-medium">Dublin</span>
              </div>
            </div>
          </div>
        </div>

        <!-- GDPR Compliant -->
        <div class="card bg-base-100 shadow-xl border border-base-300 hover:border-pink-500/30 transition-all duration-300">
          <div class="card-body">
            <div class="flex items-center gap-4 mb-4">
              <div class="bg-green-500/10 p-4 rounded-xl">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <h3 class="font-display text-2xl font-bold">{t.technicalSection.gdprCompliant.title}</h3>
            </div>
            <p class="text-base-content/70 leading-relaxed">{t.technicalSection.gdprCompliant.description}</p>

            <!-- Encryption badges -->
            <div class="flex flex-wrap gap-2 mt-6">
              <span class="badge badge-success badge-outline">AES-256</span>
              <span class="badge badge-success badge-outline">TLS 1.3</span>
              <span class="badge badge-success badge-outline">SOC 2</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sticky CTA Section -->
  <div class="sticky bottom-0 left-0 right-0 z-50 bg-gradient-to-r from-pink-500 via-purple-500 to-blue-500 py-4 shadow-2xl shadow-purple-500/20">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="text-white text-center md:text-left">
          <p class="text-lg font-medium">{t.stickyCta.subtitle}</p>
          <p class="text-sm text-white/70">{t.stickyCta.note}</p>
        </div>
        <a href={registerUrl} class="btn bg-white text-purple-600 hover:bg-white/90 border-0 px-8 rounded-full font-bold shadow-lg">
          {t.stickyCta.button}
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  // Smooth scroll to steps section
  document.getElementById('scroll-to-steps')?.addEventListener('click', () => {
    document.getElementById('steps-section')?.scrollIntoView({ behavior: 'smooth' });
  });
</script>

<style>
  /* Animation keyframes */
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .card {
    transition: all 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  /* Mobile timeline adjustments */
  @media (max-width: 768px) {
    .relative.flex {
      padding-left: 2rem;
    }
  }
</style>
