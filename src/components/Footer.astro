---
import { getTranslation, getLocalePath, locales, localeInfo, type Locale, type RouteKey } from '../i18n/utils';

interface Props {
  locale: Locale;
  routeKey?: RouteKey;
  hideLanguageSelector?: boolean;
}

const { locale, routeKey, hideLanguageSelector = false } = Astro.props;
const t = getTranslation(locale);
const currentYear = new Date().getFullYear();

// Get paths for all footer links
const coachesPath = getLocalePath('coaches', locale);
const contentcreatorsPath = getLocalePath('contentcreators', locale);
const lawyersPath = getLocalePath('lawyers', locale);
const mediaPath = getLocalePath('media', locale);
const studentsPath = getLocalePath('students', locale);
const salesPath = getLocalePath('sales', locale);
const termsPath = getLocalePath('terms', locale);
const privacyPath = getLocalePath('privacy', locale);
const datasafetyPath = getLocalePath('datasafety', locale);
const imprintPath = getLocalePath('imprint', locale);
const pricingPath = getLocalePath('pricing', locale);
const technologyPath = getLocalePath('aiSpeechRecognition', locale);
const aboutPath = getLocalePath('about', locale);
const helpPath = getLocalePath('help', locale);
const contactPath = getLocalePath('contact', locale);
const homePath = getLocalePath('index', locale);

// Available locales for language switcher (excluding current)
const availableLocales = locales.filter(l => l !== locale);
---

<footer class="bg-slate-50 text-slate-900 border-t border-slate-200">
  <!-- Main footer content -->
  <div class="max-w-7xl mx-auto px-5 pt-16 pb-8">
    <!-- Top section: Brand + Links -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-8">
      <!-- Brand section -->
      <div class="lg:col-span-4 space-y-6">
        <a href={homePath || '/'} class="inline-flex items-center gap-2 group">
          <img src="/logo-dai.svg" alt="Diktat AI Logo" class="h-8 w-auto" />
          <span class="text-2xl font-bold tracking-tight font-display" style="background:linear-gradient(to right, #ee56a4, #253a96);-webkit-background-clip:text;-webkit-text-fill-color:transparent;">
            DiktatAI
          </span>
        </a>
        <p class="text-slate-500 text-sm leading-relaxed max-w-xs">
          {t('footer.description')}
        </p>
        <!-- Compliance badge -->
        <div class="flex flex-wrap items-center gap-3 pt-2">
          <div class="flex items-center gap-2 px-3 py-1.5 bg-white border border-slate-200 rounded-full text-xs font-medium shadow-sm">
            <img src="/EU.svg" alt="EU Flag" class="w-4 h-3 object-cover rounded-sm" />
            <span class="text-slate-600">{t('footer.gdpr')}</span>
          </div>
        </div>
      </div>

      <!-- Link sections -->
      <div class="lg:col-span-8 grid grid-cols-2 sm:grid-cols-4 gap-8">
        <!-- Professions -->
        <div>
          <h3 class="text-xs font-bold uppercase tracking-widest text-slate-400 mb-4">{t('footer.professions')}</h3>
          <ul class="space-y-3">
            {coachesPath && (
              <li>
                <a href={coachesPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.consultants')}
                </a>
              </li>
            )}
            {contentcreatorsPath && (
              <li>
                <a href={contentcreatorsPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.contentCreators')}
                </a>
              </li>
            )}
            {lawyersPath && (
              <li>
                <a href={lawyersPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.lawyers')}
                </a>
              </li>
            )}
            {mediaPath && (
              <li>
                <a href={mediaPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.journalists')}
                </a>
              </li>
            )}
            {studentsPath && (
              <li>
                <a href={studentsPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.students')}
                </a>
              </li>
            )}
            {salesPath && (
              <li>
                <a href={salesPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.businessLeaders')}
                </a>
              </li>
            )}
          </ul>
        </div>

        <!-- Company -->
        <div>
          <h3 class="text-xs font-bold uppercase tracking-widest text-slate-400 mb-4">{t('footer.company')}</h3>
          <ul class="space-y-3">
            {pricingPath && (
              <li>
                <a href={pricingPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.pricing')}
                </a>
              </li>
            )}
            {technologyPath && (
              <li>
                <a href={technologyPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.technology')}
                </a>
              </li>
            )}
            {aboutPath && (
              <li>
                <a href={aboutPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.about')}
                </a>
              </li>
            )}
            {helpPath && (
              <li>
                <a href={helpPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.help')}
                </a>
              </li>
            )}
            {contactPath && (
              <li>
                <a href={contactPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.contact')}
                </a>
              </li>
            )}
          </ul>
        </div>

        <!-- Legal -->
        <div>
          <h3 class="text-xs font-bold uppercase tracking-widest text-slate-400 mb-4">{t('footer.legal')}</h3>
          <ul class="space-y-3">
            {termsPath && (
              <li>
                <a href={termsPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.terms')}
                </a>
              </li>
            )}
            {privacyPath && (
              <li>
                <a href={privacyPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.privacy')}
                </a>
              </li>
            )}
            {datasafetyPath && (
              <li>
                <a href={datasafetyPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.aiSecurity')}
                </a>
              </li>
            )}
            {imprintPath && (
              <li>
                <a href={imprintPath} class="text-sm text-slate-500 hover:text-pink-600 transition-colors">
                  {t('footer.imprint')}
                </a>
              </li>
            )}
          </ul>
        </div>

        <!-- Language Selector -->
        {!hideLanguageSelector && (
          <div>
            <h3 class="text-xs font-bold uppercase tracking-widest text-slate-400 mb-4">{t('footer.language')}</h3>
            <div class="space-y-2">
              <!-- Current language (highlighted) -->
              <div class="flex items-center gap-2 px-3 py-2 bg-white border border-slate-200 rounded-lg shadow-sm">
                <img src={localeInfo[locale].flag} alt={localeInfo[locale].name} class="w-5 h-4 object-cover rounded-sm" />
                <span class="text-sm font-medium text-slate-900">{localeInfo[locale].name}</span>
              </div>
              <!-- Other languages -->
              <div class="grid grid-cols-1 gap-1">
                {availableLocales.map((l) => {
                  const path = routeKey ? getLocalePath(routeKey, l) : getLocalePath('index', l);
                  const finalPath = path || getLocalePath('index', l);
                  return finalPath && (
                    <a
                      href={finalPath}
                      class="flex items-center gap-2 px-3 py-2 text-sm text-slate-500 hover:text-pink-600 hover:bg-white rounded-lg transition-colors"
                    >
                      <img src={localeInfo[l].flag} alt={localeInfo[l].name} class="w-5 h-4 object-cover rounded-sm" />
                      <span>{localeInfo[l].name}</span>
                    </a>
                  );
                })}
              </div>
            </div>
          </div>
        )}
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-slate-200 mt-12 pt-8">
      <p class="text-sm text-slate-400 text-center">
        {t('footer.copyright', { year: currentYear })}
      </p>
    </div>
  </div>
</footer>
