---
import { getTranslation, getLocalePath, appUrls, getRegisterUrl, type Locale } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslation(locale);

const howItWorksPath = getLocalePath('howItWorks', locale);
const pricingPath = getLocalePath('pricing', locale);
const homePath = getLocalePath('index', locale);
const registerUrl = getRegisterUrl(locale);
---

<!-- CSS-only Toggle Logic -->
<input aria-label="Toggle Menu" id="menu-toggle" type="checkbox" class="hidden" />

<!-- Sticky Header -->
<header class="fixed top-0 left-0 w-full z-50 transition-all duration-300 border-b border-slate-200/60 glass-header h-[72px] flex items-center">
  <div class="w-full max-w-7xl mx-auto px-5 flex items-center justify-between">
    <!-- Logo -->
    <a href={homePath || '/'} class="flex items-center gap-2 z-50 relative group">
      <img src="/logo-dai.svg" alt="Diktat AI Logo" class="h-8 w-auto" />
      <span class="text-2xl font-bold tracking-tight group-hover:opacity-80 transition-opacity font-display" style="background:linear-gradient(to right, #ee56a4, #253a96);-webkit-background-clip:text;-webkit-text-fill-color:transparent;">
        DiktatAI
      </span>
    </a>

    <!-- Desktop Navigation Links -->
    <nav class="hidden lg:flex items-center gap-1">
      <a href={howItWorksPath || '#'} class="px-4 py-2 text-sm font-semibold text-slate-700 hover:text-pink-600 transition-colors rounded-lg hover:bg-slate-100">
        {t('nav.howitworks')}
      </a>
      <a href={pricingPath || '#'} class="px-4 py-2 text-sm font-semibold text-slate-700 hover:text-pink-600 transition-colors rounded-lg hover:bg-slate-100">
        {t('nav.pricing')}
      </a>
      <a href={appUrls.login} class="px-4 py-2 text-sm font-semibold text-slate-700 hover:text-pink-600 transition-colors rounded-lg hover:bg-slate-100">
        {t('nav.login')}
      </a>
      <a href={registerUrl} class="ml-2 px-5 py-2.5 bg-gradient-to-r from-pink-500 to-blue-600 text-white font-bold text-sm rounded-lg hover:opacity-90 active:scale-[0.98] transition-all shadow-lg shadow-pink-500/20" data-track-cta="header_try_free">
        {t('nav.startFree')}
      </a>
    </nav>

    <!-- Mobile: Menu Trigger -->
    <label
      class="lg:hidden cursor-pointer group flex items-center gap-3 p-1 pl-3 pr-1 rounded-full hover:bg-slate-100 transition-colors duration-200 select-none"
      for="menu-toggle"
    >
      <span class="text-xs font-bold tracking-widest uppercase text-slate-500 group-hover:text-pink-600 transition-colors">
        {t('nav.menu')}
      </span>
      <div class="size-9 rounded-full bg-slate-100 flex items-center justify-center group-hover:bg-pink-500 group-hover:text-white transition-all duration-300">
        <!-- Menu Icon -->
        <svg class="menu-icon w-5 h-5 text-slate-900 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <!-- Close Icon -->
        <svg class="close-icon w-5 h-5 text-slate-900 group-hover:text-white hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </div>
    </label>
  </div>
</header>

<!-- Full Screen Navigation Drawer (Mobile Overlay) -->
<div class="mobile-menu fixed inset-0 z-40 bg-white pt-[72px] flex flex-col h-[100dvh] lg:hidden" id="mobile-menu">
  <div class="flex-1 overflow-y-auto px-5 py-8 flex flex-col">
    <!-- Navigation Links -->
    <nav class="flex flex-col gap-2 mb-10">
      <a class="group flex items-center justify-between py-4 border-b border-slate-100" href={howItWorksPath || '#'}>
        <span class="text-2xl font-bold text-slate-900 group-hover:text-pink-600 transition-colors font-display">
          {t('nav.howitworks')}
        </span>
        <svg class="w-6 h-6 text-slate-400 group-hover:text-pink-600 -rotate-45 group-hover:rotate-0 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
      <a class="group flex items-center justify-between py-4 border-b border-slate-100" href={pricingPath || '#'}>
        <span class="text-2xl font-bold text-slate-900 group-hover:text-pink-600 transition-colors font-display">
          {t('nav.pricing')}
        </span>
        <svg class="w-6 h-6 text-slate-400 group-hover:text-pink-600 -rotate-45 group-hover:rotate-0 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
      <a class="group flex items-center justify-between py-4 border-b border-slate-100" href={appUrls.login}>
        <span class="text-2xl font-bold text-slate-900 group-hover:text-pink-600 transition-colors font-display">
          {t('nav.login')}
        </span>
        <svg class="w-6 h-6 text-slate-400 group-hover:text-pink-600 -rotate-45 group-hover:rotate-0 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </nav>

    <!-- Secondary Links & CTA -->
    <div class="mt-auto flex flex-col gap-6">
      <!-- Primary Button -->
      <a
        href={registerUrl}
        class="w-full h-14 bg-gradient-to-r from-pink-500 to-blue-600 hover:opacity-90 active:scale-[0.98] transition-all rounded-lg flex items-center justify-center gap-2 text-white font-bold text-lg shadow-lg shadow-pink-500/30"
        data-track-cta="mobile_menu_try_free"
      >
        <span>{t('nav.startFree')}</span>
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
      <p class="text-center text-xs text-slate-400 font-medium pb-4">
        {t('nav.noCreditCard')}
      </p>
    </div>
  </div>
</div>

<style>
  /* Glass morphism header */
  .glass-header {
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  /* Mobile Menu Transitions */
  .mobile-menu {
    transform: translateY(-100%);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1), opacity 0.3s ease;
    opacity: 0;
    pointer-events: none;
  }

  #menu-toggle:checked ~ .mobile-menu {
    transform: translateY(0);
    opacity: 1;
    pointer-events: auto;
  }

  /* Icon rotation animation on toggle */
  #menu-toggle:checked ~ header .menu-icon {
    display: none;
  }
  #menu-toggle:checked ~ header .close-icon {
    display: block;
  }
  .close-icon {
    display: none;
  }

  /* Size utility */
  .size-9 {
    width: 2.25rem;
    height: 2.25rem;
  }
</style>

<script>
  // Close menu when clicking a link
  const menuToggle = document.getElementById('menu-toggle') as HTMLInputElement;
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      if (menuToggle) {
        menuToggle.checked = false;
      }
    });
  });

  // Close menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && menuToggle?.checked) {
      menuToggle.checked = false;
    }
  });
</script>
